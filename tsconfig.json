{
	"compilerOptions": {
	  "target": "ESNext",
	  "module": "ESNext",
	  "lib": ["DOM", "DOM.Iterable", "ESNext"],
	  "moduleResolution": "Node",
	  "jsx": "react-jsx",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "types": [
		"@wordpress/blocks",
		"@wordpress/block-editor",
		"@wordpress/components",
		"@wordpress/compose",
		"@wordpress/element",
		"@wordpress/hooks",
		"@wordpress/i18n",
		"@types/bun"
	  ],
	  "outDir": "./dist"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts", "cli/**/*.ts", "cli/**/*.tsx"],
	"exclude": ["dist"]
}
